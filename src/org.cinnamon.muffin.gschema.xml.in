<schemalist>
  <enum id="placement_type">
    <value value="0" nick="automatic"/>
    <value value="1" nick="pointer"/>
    <value value="2" nick="manual"/>
    <value value="3" nick="center"/>
  </enum>

  <enum id="background_transition">
    <value value="0" nick="none"/>
