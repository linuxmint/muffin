#!/usr/bin/make -f

CONFIGURE_EXTRA_FLAGS = \
	--prefix=/usr \
	--libdir=/usr/lib/$(DEB_HOST_MULTIARCH) \
	--libexecdir=/usr/lib/$(DEB_HOST_MULTIARCH)/muffin \
	-D gtk-doc=true \
	-D startup-notification=true


export LDFLAGS+=-Wl,-z,defs -Wl,-O1 -Wl,--as-needed


%:
	dh $@ --with gir

override_dh_auto_configure:
	meson debian/build $(CONFIGURE_EXTRA_FLAGS)

override_dh_auto_build:
	ninja -C debian/build

override_dh_auto_test:
	ninja -C debian/build test

override_dh_strip:
	dh_strip --dbg-package=muffin-dbg

override_dh_auto_install:
	DESTDIR=${CURDIR}/debian/tmp \
	ninja -C debian/build install

override_dh_girepository:
	dh_girepository /usr/lib/$(DEB_HOST_MULTIARCH)/muffin
